<div class="mb-3 flex items-center" data-id="<%= team_user.id %>">
  <span class="flex-grow text-sm">
    <strong><%= team_user.user.name.familiar %></strong> &ndash; <%= team_user.user.email %>
    <%= render(BadgeComponent.new(style: team_user.owner? ? :important : :normal)) do %>
      <%= team_user.role %>
    <% end %>
  </span>
  <%= link_to "user_path(team_user.user)", method: :delete, data: { confirm: "Are you usre?" }, class: "flex items-center flex-shrink-0 text-sm text-gray-500 hover:text-gray-800" do %>
    <%= t(".remove") %>
    <svg class="ml-1 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  <% end %>
</div>

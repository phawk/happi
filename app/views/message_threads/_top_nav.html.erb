<div class="flex flex-col sm:flex-row sm:items-center mb-8">
  <%= tag.h1 heading, class: "uppercase tracking-wider font-semibold text-gray-500 flex-auto" %>

  <div class="mt-3 sm:mt-0 sm:flex items-center gap-4">
    <%= form_with(url: search_message_threads_path, method: :get, class: "styled-form sm:order-1") do |f| %>
      <%= f.search_field :query, value: local_assigns[:query], placeholder: "Search messages", class: "rounded" %>
    <% end %>
    <% unless controller.action_name == "spam" %>
      <%= link_to spam_message_threads_path, class: "flex items-center text-sm mt-3 sm:mt-0 sm:order-0 group", title: "View spam threads" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6 mr-1 shrink-0">
          <path fill-rule="evenodd" d="m5.965 4.904 9.131 9.131a6.5 6.5 0 0 0-9.131-9.131Zm8.07 10.192L4.904 5.965a6.5 6.5 0 0 0 9.131 9.131ZM4.343 4.343a8 8 0 1 1 11.314 11.314A8 8 0 0 1 4.343 4.343Z" clip-rule="evenodd" />
        </svg>
        <span class="group-hover:underline">Spam threads (<%= @spam_threads_count %>)</span>
      <% end %>
    <% end %>
    <%= button_to auto_archive_message_threads_path, method: :delete, data: { confirm: "Are you sure?" }, class: "flex items-center text-sm mt-3 sm:mt-0 sm:order-0 group", title: "Archives open threads older than 45 days and waiting threads with no response in 7 days" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-1 shrink-0">
        <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0-3-3m3 3 3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
      </svg>
      <span class="group-hover:underline">Auto archive</span>
    <% end %>
  </div>
</div>
